<h1><%= t('view.task_index_screen') %></h1>
<%= link_to "終了期限でソートする", tasks_path(sort_expired: "true") %>
<div class="serch_unit">
  <%= form_with scope: :task, url: tasks_path, method: :get, local: true do |f| %>
    <%= f.label t('view.task_name') %>
    <%= f.text_field :task_name %>
    <%= f.label t('view.status') %>
    <%= f.select :status, Status.options_for_status %>
    <%= f.submit "検索" %>
  <% end %>
</div>
<table>
  <thead>
    <tr>
      <th><h5><%= t('view.task_name') %></h5></th>
      <th><h5><%= t('view.discription') %></h5></th>
      <th><h5><%= t('view.expired_at') %></h5></th>
      <th><h5><%= t('view.status') %></h5></th>
      <th><h5><%= t('view.show') %></h5></th>
      <th><h5><%= t('view.edit') %></h5></th>
      <th><h5><%= t('view.delete') %></h5></th>
    </tr>
  </thead>
  <tbody class="task_list">
    <% @tasks.each do |task| %>
    <tr>
      <td class="task_row"><%= task.task_name %></td>
      <td><%= task.discription %></td>
      <td><%= l(task.expired_at, format: :long) %></td>
      <td><%= t("status.#{task.status}") %></td>
      <td><%= link_to t('view.show'), task_path(task.id) %></td>
      <td><%= link_to t('view.edit'), edit_task_path(task.id) %></td>
      <td><%= link_to t('view.delete'), task_path(task.id), method: :delete, data: {confirm: t('view.delete_task')} %></td>
    </tr>
    <% end %>
  </tbody>
</table>
<%= link_to t('view.make_new_task'), new_task_path %>
