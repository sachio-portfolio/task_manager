<h1>タスク一覧</h1>
<table>
  <thead>
    <tr>
      <th><h5>タスク名</h5></th>
      <th><h5>タスク詳細</h5></th>
      <th><h5>詳細</h5></th>
      <th><h5>編集</h5></th>
      <th><h5>削除</h5></th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
    <tr>
      <td><%= task.task_name %></td>
      <td><%= task.discription %></td>
      <td><%= link_to "詳細", task_path(task.id) %></td>
      <td><%= link_to "編集", edit_task_path(task.id) %></td>
      <td><%= link_to "削除", task_path(task.id), method: :delete, data: {confirm: "このタスクを削除しますか？"} %></td>
    </tr>
    <% end %>
  </tbody>
</table>
<%= link_to "タスク新規作成へ", new_task_path %>
