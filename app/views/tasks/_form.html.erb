<%= form_with model: @task, local: true do |f| %>
  <% if @task.errors.any? %>
    <div id="error_explanation">
      <h2><%= @task.errors.count %>件のエラーがあります。</h2>
      <ul>
      <% @task.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="task_unit">
    <%= f.label :task_name %>
    <%= f.text_field :task_name %>
  </div>
  <div class="task_unit">
    <%= f.label :discription %>
    <%= f.text_area :discription %>
  </div>
    <%= f.submit "登録する" %>
<% end %>
