<div class="col-md-1">
</div>
<div class="col-xs-12 col-md-11">
  <div class="">
    <h1 class="mb-3">ユーザー管理画面</h1>
  </div>
  <div class="btn btn-primary new-btn  btn-sm mb-4">
    <%= link_to t('view.user_new_screen'), new_admin_user_path %>
  </div>
  <div class="btn btn-info new-btn  btn-sm mb-4">
    <%= link_to t('view.create_new_label'), new_label_path %>
  </div>
  <table class="table">
    <thead>
      <th><%= t('view.user_name') %></th>
      <th><%= t('view.email') %></th>
      <th><%= t('view.admin') %></th>
      <th><%= "" %></th>
    </thead>
    <tbody>
      <% @users.each do |user| %>
      <tr class="user_management">
        <td><%= user.user_name %></td>
        <td><%= user.email %></td>
        <td><%= user.admin? ? 'あり' : 'なし' %></td>
        <td >
          <%= link_to "詳細", admin_user_path(user.id),  class: "btn btn-outline-primary show-btn" %>
          <%= link_to "編集", edit_admin_user_path(user.id), class: "btn btn-outline-success edit-btn" %>
          <%= link_to "削除", admin_user_path(user.id), method: :delete, data: {confirm: "ユーザー「#{user.user_name}」を削除しても宜しいですか？"}, id: "delete_button", class: "btn btn-outline-danger delete-btn" %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
