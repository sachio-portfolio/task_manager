<div class="col-md-1">
</div>
<div class="col-xs-12 col-md-11">
  <h1 class="mb-3"><%= t('view.create_new_label') %></h1>
  <div class="error_unit">
    <% if @label.errors.any? %>
      <div id="error_explanation">
        <h2><%= @label.errors.count %>件のエラーがあります。</h2>
        <ul>
        <% @label.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
  </div>
  <div class="row mt-4 mb-4">
    <div class="col-xs-12 col-md-6">
      <%= form_with model: @label, local: true do |f| %>
        <div class="form-group task_unit">
          <%= f.label :label_name %>
          <%= f.text_field :label_name, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.submit "登録する", class: "btn btn-info" %>
        </div>
      <% end %>
    </div>
  </div>
  <%= link_to t('view.go_to_index'), tasks_path %>
</div>
